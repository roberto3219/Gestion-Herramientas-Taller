<!DOCTYPE html>
<html lang="en"> 
<%- include('../partials/head') %>  
<body>
<div class="container mt-5 col-md-6">
  <h2 class="text-center mb-4">Registro de Usuario</h2>
  <form method="POST" action="/users/register">
    <div class="mb-3">
       <% if(locals.errores && errores.username){ %>
            <p class="errorText"><%= errores.username.msg %></p>
          <% } %>
      <label for="username" class="form-label">Nombre de usuario</label>
      <input type="text" class="form-control" id="username" name="username"   value="<%= locals.old && old.username ? old.username : '' %>"
 required>
    </div>
    <div class="mb-3">
       <% if(locals.errores && errores.nombre){ %>
            <p class="errorText"><%= errores.nombre.msg %></p>
          <% } %>
      <label for="nombre" class="form-label">Nombre completo</label>
      <input type="text" class="form-control" id="nombre" name="nombre" value="<%= locals.old && old.nombre ? old.nombre : '' %>"
 required>
    </div>
    <div class="mb-3">
      <label for="img" class="form-label">foto del usuario</label>
      <input type="file" class="form-control" id="img" name="imagen">
    </div>

    <div class="mb-3">
       <% if(locals.errores && errores.email){ %>
            <p class="errorText"><%= errores.email.msg %></p>
          <% } %>
      <label for="email" class="form-label">Correo electrónico</label>
      <input type="email" class="form-control" id="email" name="email"  value="<%= locals.old && old.email ? old.email : '' %>"
 required>
    </div>

    <div class="mb-3">
       <% if(locals.errores && errores.password){ %>
            <p class="errorText"><%= errores.password.msg %></p>
          <% } %>
      <label for="password" class="form-label">Contraseña</label>
      <input type="password" class="form-control" id="password" name="password" value="<%= locals.old && old.password ? old.password : '' %>"
 required>
    </div>

    <button type="submit" class="btn btn-success w-100">Registrarse</button>
  </form>
</div>
</body>
</html>
