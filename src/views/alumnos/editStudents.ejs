<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/header.ejs') %>
<div class="container mt-4 col-md-8">
  <h2 class="mb-3">Editar Alumno</h2>
  <form method="POST" action="/estudiantes/editar/<%= alumno.id %>">
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre completo</label>
      <input type="text" id="nombre" name="nombre" value="<%= alumno.nombre %>" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="dni" class="form-label">DNI</label>
      <input type="text" id="dni" name="dni" value="<%= alumno.dni %>" class="form-control">
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" value="<%= alumno.email %>" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="curso" class="form-label">Curso / Año</label>
      <input type="text" id="curso" name="curso" value="<%= alumno.curso %>" class="form-control">
    </div>

    <div class="mb-3">
      <label for="telefono" class="form-label">Teléfono</label>
      <input type="text" id="telefono" name="telefono" value="<%= alumno.telefono %>" class="form-control">
    </div>

    <input type="submit" class="btn btn-primary" value="Actualizar Alumno">
    <a href="/estudiantes" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
</body>
</html>

