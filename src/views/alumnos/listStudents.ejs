<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/header.ejs') %>
<div class=" mt-4">
  <div class="container">
  <h2 class="mb-4">Lista de Alumnos</h2>

  <!-- Buscador -->
  <form class="d-flex mb-3" method="POST" action="/estudiantes">
    <input class="form-control me-2" type="search" placeholder="Buscar alumno por nombre o correo" name="q">
    <input class="btn btn-outline-primary" type="submit" value="Buscar">
  </form>

    <div class="button_sd" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
  <!-- agregar nuevo alumno -->
  <a href="/estudiantes/add" class="btn btn-primary mb-3">
    Agregar  Alumno
  </a>
   <form action="/estudiantes/reporte" method="post">
    <input type="submit" value="Generar Reporte PDF" class="btn btn-danger mb-3">
  </form>
    </div>
  </div>

  <!-- Tabla -->
  <table class="table table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nombre Completo</th>
        <th>Email</th>
        <th>Curso</th>
        <th>Teléfono</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      <% alumnos.forEach(a => { %>
        <tr>
          <td><%= a.id %></td>
          <td><%= a.nombre %></td>
          <td><%= a.email %></td>
          <td><%= a.curso %></td>
          <td><%= a.telefono %></td>
          <td>
            <a href="/estudiantes/editar/<%= a.id %>" class="btn btn-sm btn-warning">Editar</a>
            <a href="/estudiantes/eliminar/<%= a.id %>" class="btn btn-sm btn-danger">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
