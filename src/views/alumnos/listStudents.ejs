<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/header.ejs') %>
<div class="container mt-4">
  <h2 class="mb-4">Lista de Alumnos</h2>

  <!-- Buscador -->
  <form class="d-flex mb-3" method="GET" action="/alumnos/buscar">
    <input class="form-control me-2" type="search" placeholder="Buscar alumno por nombre o correo" name="q">
    <button class="btn btn-outline-primary" type="submit">Buscar</button>
  </form>

  <!-- agregar nuevo alumno -->
  <a href="/estudiantes/add" class="btn btn-primary mb-3">
    Agregar  Alumno
  </a>

  <!-- Tabla -->
  <table class="table table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nombre Completo</th>
        <th>Email</th>
        <th>Curso</th>
        <th>Teléfono</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      <% alumnos.forEach(a => { %>
        <tr>
          <td><%= a.id %></td>
          <td><%= a.nombre %></td>
          <td><%= a.email %></td>
          <td><%= a.curso %></td>
          <td><%= a.telefono %></td>
          <td>
            <a href="/alumnos/<%= a.id %>/editar" class="btn btn-sm btn-warning">Editar</a>
            <a href="/alumnos/<%= a.id %>/eliminar" class="btn btn-sm btn-danger">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
