<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Sistema de Gestión de Herramientas</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center">Gestión de Herramientas</h1>
  </div>
  <div class="container mt-4">
  <h2 class="mb-4">Préstamos de Herramientas</h2>

  <!-- Buscador -->
  <form class="d-flex mb-3" method="GET" action="/prestamos/buscar">
    <input class="form-control me-2" type="search" placeholder="Buscar por alumno o herramienta" name="q">
    <button class="btn btn-outline-primary" type="submit">Buscar</button>
  </form>

  <!-- Tabla -->
  <table class="table table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Alumno</th>
        <th>Herramienta</th>
        <th>Profesor</th>
        <th>Fecha Préstamo</th>
        <th>Fecha Devolución</th>
        <th>Estado</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      <% prestamos.forEach(p => { %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.alumno %></td>
          <td><%= p.herramienta %></td>
          <td><%= p.profesor_encargado %></td>
          <td><%= p.fecha_prestamo %></td>
          <td><%= p.fecha_devolucion_real %></td>
          <td>
            <% if(p.estado === 'Devuelto'){ %>
              <span class="badge bg-success">Devuelto</span>
            <% } else { %>
              <span class="badge bg-danger">Pendiente</span>
            <% } %>
          </td>
          <td>
            <a href="/prestamos/<%= p.id %>/editar" class="btn btn-sm btn-warning">Editar</a>
            <a href="/prestamos/<%= p.id %>/eliminar" class="btn btn-sm btn-danger">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

  <!-- Bootstrap JS -->
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
